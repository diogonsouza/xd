@model OperadorListagemViewModel
@{
    ViewBag.Title = "Operador";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Operador</h2>
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("Index", "Home")">Home</a>
            </li>
            <li class="active">
                <strong>Operador</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">

    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Lista de Operadores</h5>
                </div>
                <div class="ibox-content">
                    <table class="table table-bordered table-striped table-hover">
                        <tr>
                            <th>Nome</th>
                            <th>Ativo</th>
                            <th></th>
                        </tr>
                        @foreach (var item in Model.Operador)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                                <td>@(item.Ativo ? "Sim" : "Não")</td>
                                <td>
                                    @Html.ActionLink("Editar", "Editar", "Operador", new { id = item.OperadorId }, new { @class = "btn btn-primary btn-sm" })
                                </td>
                            </tr>
                        }
                    </table>
                    <div class="ibox-content">
                        <div class="ibox-tools">
                            @Html.ActionLink("Novo", "Adicionar", "Operador", null, new { @class = "btn btn-primary btn-sm" })
                        </div>
                    </div>
                    <div class="ibox-content">
                        @AdminComponents.Pager(Html, Url, Model.Operador)
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

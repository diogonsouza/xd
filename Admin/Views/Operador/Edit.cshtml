@model OperadorEditViewModel
@{
    ViewBag.Title = (Model.OperadorId > 0 ? "Editando Operador" : "Adicionando Operador");
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>@(Model.OperadorId > 0 ? "Editando Operador" : "Adicionando Operador")</h2>
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("Index", "Home")">Home</a>
            </li>
            <li>
                @Html.ActionLink("Operador", "Index", "Operador")
            </li>
            <li class="active">
                <strong>@(Model.OperadorId > 0 ? "Editar" : "Adicionar")</strong>
            </li>
        </ol>
    </div>
    <div class="col-sm-8">
        <div class="title-action">
            @Html.ActionLink("Operador", "Index", "Operador", null, new { @class = "btn btn-primary" })
        </div>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>@(Model.OperadorId > 0 ? "Editando Operador" : "Adicionando Operador")</h5>
                </div>
                <div class="ibox-content">
                    @AdminComponents.ValidationSummary(Model.ValidationResult)
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">

                            @Html.ValidationSummary(true)
                            @Html.HiddenFor(model => model.OperadorId)
                            @Html.HiddenFor(model => model.DataCadastro)

                            <div class="form-group">
                                @Html.LabelFor(model => model.Nome, "Nome:", new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.TextBoxFor(model => model.Nome, new { @class = "single-line", required = "required" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.Login, "Login:", new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.TextBoxFor(model => model.Login, new { @class = "single-line", type = "email", required = "required" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.Senha, "Senha:", new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.TextBoxFor(model => model.Senha, new { @class = "single-line", type = "password", required = "required" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.ConfirmacaoSenha, "Confirmação da Senha:", new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.TextBoxFor(model => model.ConfirmacaoSenha, new { @class = "single-line", type = "password", required = "required" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.Ativo, "Ativo:", new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    <div class="checkbox i-checks">
                                        <label>
                                            @Html.CheckBoxFor(model => model.Ativo)
                                        </label>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Salvar" class="btn btn-primary" />
                                    @Html.ActionLink("Cancelar", "Index", "Operador", null, new { @class = "btn btn-white" })
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>